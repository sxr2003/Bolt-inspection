{
    "project": {
        "name": "BoltLooseningDetection",
        "version": "2.2-multihead-attention-fusion",
        "description": "Enhanced multi-modal framework with deeper models, multi-head attention fusion, and robust data augmentation."
    },
    "data": {
        "data_dir": "./data",
        "generalization_dir": "./data_set/",
        "data_format": ".csv",
        "sr": 16000,
        "case_ids": [
            "Case1",
            "Case2",
            "Case3",
            "Case4",
            "Case5",
            "Case6",
            "Case7",
            "Case8",
            "Case9",
            "Case10",
            "Case11",
            "Case12",
            "Case13",
            "Case14",
            "Case15",
            "Case16"
        ],
        "image_size": [
            224,
            224
        ],
        "seq_lens": [
            4096,
            1024,
            2048
        ],
        "step_ratio": 0.5,
        "batch_size": 32,
        "num_workers": 12,
        "num_classes": 16,
        "hop_length": 128,
        "signal_column_index": 0,
        "signal_mean": -0.06181840179814535,
        "signal_std": 2.094398080416704
    },
    "modality": {
        "pseudo_image_mode": 1,
        "image_model": {
            "type": 2,
            "in_channels": 5,
            "out_dim": 256,
            "pretrained": true
        },
        "signal_model": {
            "type": 2,
            "in_channels": 1,
            "out_dim": 256,
            "embed_dim": 256,
            "nhead": 8,
            "num_layers": 3,
            "dropout": 0.4
        },
        "fusion": {
            "type": 2,
            "dropout": 0.4,
            "num_heads": 4
        }
    },
    "augment": {
        "signal": {
            "use_augment": true,
            "params": {
                "time_stretch_range": [
                    0.7,
                    1.3
                ],
                "time_stretch_p": 0.8,
                "freq_shift_range": 3,
                "pitch_shift_p": 0.8,
                "noise_amp": 0.008,
                "noise_p": 0.8,
                "amplitude_scale_range": [
                    0.7,
                    1.3
                ],
                "amplitude_scale_p": 0.9,
                "dc_offset_p": 0.8,             
                "dc_offset_amp": 0.18,          
                "random_cutout_p": 0.8,         
                "cutout_len_range": [
                    0.01,
                    0.2
                ]
            }
        },
        "image": {
            "use_augment": true,
            "brightness": 0.5,
            "contrast": 0.18,
            "color_jitter_p": 0.6,
            "h_flip_p": 0.5,
            "rotate_range": [
                -10,
                10
            ],
            "rotate_p": 0.5,
            "erasing_area_range": [
                0.02,
                0.1
            ],
            "erasing_ratio_range": [
                0.3,
                3.33
            ],
            "random_erasing_p": 0.8
        }
    },
    "train": {
        "device": "cuda",
        "epochs": 200,
        "learning_rate": 0.0001,
        "optimizer": "AdamW",
        "scheduler": {
            "use_scheduler": true,
            "type": "ReduceLROnPlateau",
            "patience": 5,
            "factor": 0.5
        },
        "early_stopping_patience": 30,
        "loss_type": "weighted_loss",
        "class_weights": [
            1.0,
            1.0,
            2,
            1.0,
            2,
            1.0,
            1.0,
            1.0,
            2,
            2,
            3.0,
            2,
            3.0,
            1.5,
            1.0,
            1.0
        ],
        "log_dir": "./logs",
        "model_dir": "./checkpoints",
        "best_model_name": "best_model_10.25.pth",
        "visualization_tool": "tensorboard"
    }
}